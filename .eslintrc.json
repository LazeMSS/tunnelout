{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "quotes": ["error", "single", { "avoidEscape": true }],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off"
    },
    "noInlineConfig": true
}
